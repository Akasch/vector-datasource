{% if zoom < 9 %}

SELECT
    NULL AS name,
    NULL AS area,
    mz_calculate_json_earth(t.*) AS mz_properties,
    'naturalearthdata.com' AS source,
    {% filter geometry %}the_geom{% endfilter %} AS __geometry__,
    gid AS __id__,
    mz_earth_min_zoom AS min_zoom,
    NULL AS tags
FROM
{% if zoom < 2 %}
    ne_110m_land t
{% elif 2 <= zoom < 5 %}
    ne_50m_land t
{% elif 5 <= zoom < 9 %}
    ne_10m_land t
{% endif %}

WHERE
    mz_earth_min_zoom <= {{ zoom }} AND
    {{ bounds|bbox_filter('the_geom') }}

{% else %}

SELECT
    NULL AS name,
    NULL AS area,
    mz_calculate_json_earth(t.*) AS mz_properties,
    'openstreetmapdata.com' AS source,
    {% filter geometry %}the_geom{% endfilter %} AS __geometry__,
    gid AS __id__,
    NULL AS min_zoom,
    NULL AS tags

FROM
    land_polygons t

WHERE
    {{ bounds|bbox_filter('the_geom') }}

{% endif %}

{% if zoom >= 7 %}

UNION ALL

SELECT
    name,
    way_area::bigint AS area,
    mz_calculate_json_earth(t.*) AS mz_properties,
    'openstreetmap.org' AS source,
    {% filter geometry %}way{% endfilter %} AS __geometry__,
    osm_id AS __id__,
    mz_earth_min_zoom AS min_zoom,
    %#tags AS tags

FROM planet_osm_polygon t

WHERE
{% if zoom < 16 %}
    mz_earth_min_zoom <= {{ zoom }} AND
{% else %}
    mz_earth_min_zoom IS NOT NULL AND
{% endif %}
    {{ bounds|bbox_filter('way') }}

UNION ALL

SELECT
    name,
    NULL AS area,
    mz_calculate_json_earth(t.*) AS mz_properties,
    'openstreetmap.org' AS source,
    {% filter geometry %}way{% endfilter %} AS __geometry__,
    osm_id AS __id__,
    mz_earth_min_zoom AS min_zoom,
    %#tags AS tags

FROM planet_osm_line t

WHERE
{% if zoom < 16 %}
    mz_earth_min_zoom <= {{ zoom }} AND
{% else %}
    mz_earth_min_zoom IS NOT NULL AND
{% endif %}
    {{ bounds|bbox_filter('way') }}

{% endif %}


UNION ALL

SELECT
  name,
  NULL AS area,
  mz_calculate_json_earth(t.*) AS mz_properties,
  'openstreetmap.org' AS source,
  way AS __geometry__,
  osm_id AS __id__,
  mz_earth_min_zoom AS min_zoom,
  %#tags AS tags

FROM
  planet_osm_point t

WHERE
{% if zoom < 16 %}
  mz_earth_min_zoom <= {{ zoom }} AND
{% else %}
  mz_earth_min_zoom IS NOT NULL AND
{% endif %}
  {{ bounds|bbox_filter('way') }}