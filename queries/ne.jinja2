  {% filter geometry %}the_geom{% endfilter %} AS __geometry__,
  NULL AS __label__,

  ne_common_properties(),

  NULL AS __boundaries_properties__,
  NULL AS __earth_properties__,
  NULL AS __landuse_properties__,
  NULL AS __places_properties__,

  jsonb_build_object(
      'min_zoom', scalerank,
      'scalerank', scalerank,
      'featurecla', featurecla,
      'type', type,
      'expressway', expressway,
      'sov_a3', sov_a3,
      'level', level,
      'continent', continent,
      'label', label,
      'name', name
  ) AS __roads_properties__,

  NULL AS __water_properties__

FROM

  ne_10m_roads

WHERE

  {{ bounds['line']|bbox_filter('the_geom', 3857) }}
  AND scalerank <= {{ zoom }}

